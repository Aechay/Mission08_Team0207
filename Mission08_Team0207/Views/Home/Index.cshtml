              <a asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
          </div>
      }
    </div>
  </div>

  <div class="row text-center">
    <div class="col-2 border d-flex align-items-center justify-content-center">Not Important</div>

    <div class="col-5 border text-start">
      <strong>Quadrant 3</strong>
      @foreach (var x in Model.Where(t => t.Quadrant == 3))
      {
