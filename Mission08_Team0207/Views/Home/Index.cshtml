@model List<Mission08_Team0207.Models.TaskItem>

<div class="container mt-4">
  <div class="row text-center">
    <div class="col-2"></div>
    <div class="col-5 border">Urgent</div>
    <div class="col-5 border">Not Urgent</div>
  </div>

  <div class="row text-center">
    <div class="col-2 border d-flex align-items-center justify-content-center">Important</div>

    <div class="col-5 border text-start">
      <strong>Quadrant 1</strong>
      @foreach (var x in Model.Where(t => t.Quadrant == 1))
      {
          <div>
              @x.TaskName
              <a asp-action="AddTask" asp-route-id="@x.TaskId">Update</a>
              <a asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
          </div>
      }
    </div>

    <div class="col-5 border text-start">
      <strong>Quadrant 2</strong>
      @foreach (var x in Model.Where(t => t.Quadrant == 2))
      {
